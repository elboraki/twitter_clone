<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                  <img src="https://bulma.io/images/placeholders/128x128.png">
            </p>
        </figure>

        <div class="media-content">
            <%= render 'tweets/form' %>
        </div>
    </article>

<% @tweets.each  do |tweet|%>
<div class="box">
    <article class="media">
        <figure class="media-left">
            <p class="image is-64x64">
                  <img src="https://bulma.io/images/placeholders/128x128.png">
            </p>
        </figure>

        <div class="media-content">
            <div class="content">
                <strong>Younes</strong>
                <small>@nesu</small>
                <p>
                    <%= tweet.tweet %>
                </p>
            </div>
            <nav class="level">
                <div class="level-left is-mobile">
                    <%= link_to tweet, class:"level-item" do %>
                        <span class="icon">
                            <i class="fa fa-link" aria-hidden="true">

                            </i>
                        </span>
                    <% end %> 

                     <%= link_to edit_tweet_path(tweet), class:"level-item" do %>
                        <span class="icon">
                         <span class="fa fa-italic" aria-hidden="true"></span>
                        </span>
                    <% end %>   
                     <%= link_to tweet_path(tweet), class:"level-item" ,method: :delete ,data:{confirm: "are you sure ?"} do %>
                        <span class="icon">
                         <i class="fa fa-trash"></i>
                        </span>
                    <% end %>                  
                </div>
            </nav>
        </div>
    </article>
</div>
<% end %>
</div>